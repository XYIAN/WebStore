<% include partials/head.ejs %>
<script>
$(document).ready(function(){
        <% for (var i = 0; i < searchResult.length; i++) { %>
        document.getElementById('result').innerHTML += '<p> <%= searchResult[i]['ID'] %>.<%= searchResult[i]['Name'] %></p>'
        document.getElementById('result').innerHTML += '<p> Item Genre: <%= searchResult[i]['genre']   %></p>'
        document.getElementById('result').innerHTML += '<p> Price: <%= searchResult[i]['Price'] %> $</p>'
        <% } %>
});
</script>

 <!--search bar -->
        <form id="searchBar">
                <input id="search" name="search" value="<%searchTerm%>" type="text" placeholder="Search by Title, Author, or ISBN...">
                <select name="genre" onchange="this.form.submit()"> 
                    <option value="">Select Genre</option>
                    <option value="novel"     <% if (genre == "novel"){ %> selected } <% } %> >novel</option>
                    <option value="fantasy"   <% if (genre == "fantasy"){ %> selected } <% } %> >fantasy</option>
                    <option value="kids"      <% if (genre == "kids"){ %> selected } <% } %> >kids</option>
                    <option value="mystery"   <% if (genre == "mystery"){ %> selected } <% } %> >mystery</option>
                    <option value="dystopian" <% if (genre == "dystopian"){ %> selected } <% } %> >dystopian</option>
                </select>
        </form>
        
        <!--search result filler-->
        <div id="result"></div>
        
        
        
        
        
